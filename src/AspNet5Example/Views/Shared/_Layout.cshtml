<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <environment names="Development">
        <link asp-href-include="~/css/*.css" rel="stylesheet" />
    </environment>
    <environment names="Staging, Production">
        <link asp-href-include="~/css/min/site.min.css" rel="stylesheet" />
    </environment>
</head>
<body>
    <div>
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom:0">
            <div class="navbar-header">
                <div class="navbar-brand">My Fish Tank</div>
            </div>
            <div style="height:50px;overflow:hidden;background-repeat:repeat-y;">
                <img src="~/img/aquarium.jpg" alt="Goldfish background" class="pull-right"
                      asp-append-version="true" />
            </div>
        </nav>
    </div>
    <div>
        @RenderBody()
    </div>
    <environment names="Development">
        <script asp-src-include="~/js/*.js"></script>
    </environment>
    <environment names="Staging, Production">
        <script asp-src-include="~/js/min/site.min.js"></script>
    </environment>
</body>
</html>
